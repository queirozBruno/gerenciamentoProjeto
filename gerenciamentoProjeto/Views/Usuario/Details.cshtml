@model Modelo.Usuario

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Gerenciamento de Projetos - @ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
</head>
<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" href="index.html">Gerenciamento de Projetos</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search -->
        <div style="width: 350px"></div>
        <p><div class="text-center"><h4 style="color:white">Projeto</h4></div></p>
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Pesquisar..." aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow mx-1">
                <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bell fa-fw"></i>
                    
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="alertsDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            <li class="nav-item dropdown no-arrow mx-1">
                <a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-envelope fa-fw"></i>
                    
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="messagesDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">Configurações</a>
                    <a class="dropdown-item" href="#">Registro de Atividades</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Sair</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="~/Menu/index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Projetos</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <h6 class="dropdown-header">Meus Projetos:</h6>
                    <a class="dropdown-item" href="~/Projeto/Create">Criar Projeto</a>
                    <a class="dropdown-item" href="~/Projeto/Index">Meus Projetos</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="charts.html">
                    <i class="fas fa-fw fa-hands-helping"></i>
                    <span>Minha Rede</span>
                </a>
            </li>
        </ul>
        <div id="content-wrapper">
            <div class="container-fluid">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Visão Geral</li>
                </ol>


                <!-- Funcionalidades -->
                <div class="container-fluid" style="background-color:#ebedef; height:300px">                    
                    <img style="border-radius:50%; width:152px; height:152px; border:groove" />
                    <a class="float-right" style="position:relative" href="/Usuario/Edit/@Model.UsuarioId"><span class="fa fa-pen"></span></a>
                    <p><h2>@Html.DisplayFor(model => model.UsuarioNome)</h2></p>
                    <h5>@Html.DisplayFor(model => model.UsuarioEmail)</h5>
                    <h5>@Html.DisplayFor(model => model.UsuarioTelefone)</h5>
                </div>
                <br />

                <div class="container-fluid" style="background-color:#ebedef">
                    <div></div>
                    <div>
                        <h4>Experiências <a class="float-right align-top" href="~/Experiencia/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in Model.Experiencias)
                        {
                            <h5>@item.ExperienciaCargo <a class="float-right align-top" href="~/Experiencia/Edit/@item.ExperienciaId"><span class="fa fa-pen"></span></a></h5>
                            <h6>@item.ExperienciaEmpresa</h6>
                            <h6>
                                @item.ExperienciaDataInicio -
                            @if (item.ExperienciaAtual == true)
                            {
                                <label>até o momento</label>
                            }
                            else
                            {
                                <label>@item.ExperienciaDataFinal</label>
                            }
                        </h6>
                        <h6>@item.ExperienciaLocal</h6>
                    }
                        <hr />
                    </div>
                    <div>
                        <h4>Formação Acadêmica <a class="float-right align-top" href="~/FormacaoAcademica/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in Model.FormacaoAcademicas)
                        {
                            <h5>@item.FormacaoInstituicao <a class="float-right align-top" href="~/FormacaoAcademica/Edit/@item.FormacaoId"><span class="fa fa-pen"></span></a></h5>
                            <h6>@item.FormacaoFormacao, @item.FormacaoArea</h6>
                            <h6>@item.FormacaoAnoIni - @item.FormacaoAnoFim</h6>
                        }
                        <hr />
                    </div>
                    <div>
                        <h4>Idiomas <a class="float-right align-top" href="~/IdiomaUsuario/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in ViewBag.Idioma)
                        {
                            <h5>@item.idioma.IdiomaNome <a class="float-right align-top" href="~/IdiomaUsuario/Edit/@item.IdiomaUsuarioId"><span class="fa fa-pen"></span></a></h5>
                            <h6>@item.IdiomaProficiencia</h6>
                        }
                        <hr />
                    </div>
                    <div>
                        <h4>Cursos <a class="float-right align-top" href="~/CursoUsuario/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in Model.CursoUsuarios)
                        {
                            <h5>@item.CursoNome <a class="float-right align-top" href="~/CursoUsuario/Edit/@item.CursoUsuarioId"><span class="fa fa-pen"></span></a></h5>
                            <h6>@item.CursoDescricao</h6>
                        }
                        <hr />
                    </div>
                    <div>
                        <h4>Certificados <a class="float-right align-top" href="~/CertificadoUsuario/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in ViewBag.Certificado)
                        {
                            <h5>@item.certificado.CertificadoNome <a class="float-right align-top" href="~/CertificadoUsuario/Edit/@item.CertificadoUsuarioId"><span class="fa fa-pen"></span></a></h5>
                            <h6>@item.CertificadoUsuarioOrgEmissor</h6>
                            <h6>@item.CertificadoUsuarioDataEmissao - @item.CertificadoUsuarioDataExpiracao</h6>
                            <h6>@item.CertificadoUsuarioUrlCredencial</h6>
                        }
                        <hr />
                    </div>
                    <div>
                        <h4>Competências <a class="float-right align-top" href="~/CompetenciaUsuario/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in ViewBag.Competencia)
                        {
                            <h5>@item.competencia.CompetenciaNome <a class="float-right align-top" href="~/CompetenciaUsuario/Edit/@item.CompetenciaUsuarioId"><span class="fa fa-pen"></span></a></h5>
                        }
                        <hr />
                    </div>
                    <div>
                        <h4>Publicações <a class="float-right align-top" href="~/PublicacaoUsuario/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in ViewBag.Publicacao)
                        {
                            <h5>@item.publicacao.PublicacaoTitulo <a class="float-right align-top" href="~/PublicacaoUsuario/Edit/@item.PublicacaoUsuarioId"><span class="fa fa-pen"></span></a></h5>
                            <h6>@item.publicacao.PublicaçãoData . @item.publicacao.PublicacaoEditora</h6>
                            <h6>@item.publicacao.PublicacaoUrl</h6>
                        }
                        <hr />
                    </div>
                    <div>
                        <h4>Linguagens de Domínio <a class="float-right align-top" href="~/LinguagemUsuario/Create/@Model.UsuarioId"><span class="fa fa-plus"></span></a></h4><hr />
                        @foreach (var item in ViewBag.Linguagem)
                        {
                            <h5>@item.linguagem.LinguagemNome <a class="float-right align-top" href="~/LinguagemUsuario/Edit/@item.LinguagemUsuarioId"><span class="fa fa-pen"></span></a></h5>
                        }
                        <hr />
                    </div>
                </div>

                <p>

                    @Html.ActionLink("Voltar", "Index")
                </p>

                <!-- Funcionalidades -->

            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Gerenciamento de Projetos 2020</span>
                    </div>
                </div>
            </footer>
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Modal de saída-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Deseja realmente sair?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Selecione "Sair" abaixo se você realmente deseja encerrar sua sessão.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <a class="btn btn-primary" href="~/Usuario/login">Sair</a>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/js")
</body>
</html>